def find_common_divisors(numbers):
    if not numbers:
        return []

    # Находим наименьшее число в массиве
    min_number = min(numbers)

    # Инициализируем список общих делителей как делители наименьшего числа
    common_divisors = [i for i in range(1, min_number + 1) if min_number % i == 0]

    # Проверяем, являются ли остальные числа общими делителями
    for number in numbers[1:]:
        common_divisors = [divisor for divisor in common_divisors if number % divisor == 0]

    return common_divisors

# Пример использования
numbers = [42, 12, 18]
print(find_common_divisors(numbers))  # [1, 2, 3, 6]
